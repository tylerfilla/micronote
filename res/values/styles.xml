<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppThemeActionBar</item>
    </style>

    <style name="AppThemeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:icon">@color/transparent</item>
        <item name="android:background">@drawable/background_actionbar</item>
        <item name="android:titleTextStyle">@style/AppThemeActionBarTitleText</item>
    </style>

    <style name="AppThemeActionBarTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_actionbar</item>
    </style>

    <style name="AppThemeNoteListItemTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_note_list_item_title</item>
    </style>

    <style name="AppThemeNoteListItemContentPreviewText" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_note_list_item_preview</item>
    </style>

    <style name="AppThemeNoteListFooterText" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_note_list_footer</item>
    </style>

    <style name="AppThemeSearchBubbleInput" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_search_bubble_input</item>
        <item name="android:textColorHint">@color/text_search_bubble_input_hint</item>
    </style>

</resources>