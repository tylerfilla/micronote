<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/actionbarActivityNoteEditTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:gravity="center_horizontal|center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/text_actionbar"
        android:textSize="24sp" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|left"
        android:background="@drawable/background_button_actionbar"
        android:contentDescription="@string/content_buttonActionBack"
        android:onClick="buttonActionClicked"
        android:src="@drawable/ic_action_back"
        android:tag="back" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/background_button_actionbar"
        android:contentDescription="@string/content_buttonActionMore"
        android:onClick="buttonActionClicked"
        android:src="@drawable/ic_action_more"
        android:tag="more" />

</FrameLayout>