<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pad_background"
    android:orientation="vertical" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/activityNotesNoteListEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activityNotesNoteListEmptyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/note_list_empty_title"
            android:textAppearance="@style/AppThemeNoteListItemTitleText" />

        <TextView
            android:id="@+id/activityNotesNoteListEmptyBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/note_list_empty_body"
            android:textAppearance="@style/AppThemeNoteListItemContentPreviewText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activityNotesSearchEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activityNotesSearchEmptyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/search_empty_title"
            android:textAppearance="@style/AppThemeNoteListItemTitleText" />

        <TextView
            android:id="@+id/activityNotesSearchEmptyBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/search_empty_body"
            android:textAppearance="@style/AppThemeNoteListItemContentPreviewText" />
    </LinearLayout>

</RelativeLayout>