<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/text_actionbar"
        android:textSize="24sp" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="left"
        android:background="@drawable/background_button_actionbar"
        android:contentDescription="@string/content_buttonActionSettings"
        android:onClick="buttonActionClicked"
        android:src="@drawable/ic_action_settings"
        android:tag="settings" />

    <ImageButton
        android:id="@+id/buttonActionSearch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="48dp"
        android:background="@drawable/background_button_actionbar"
        android:contentDescription="@string/content_buttonActionSearch"
        android:onClick="buttonActionClicked"
        android:src="@drawable/ic_action_search"
        android:tag="search" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/background_button_actionbar"
        android:contentDescription="@string/content_buttonActionNoteNew"
        android:onClick="buttonActionClicked"
        android:src="@drawable/ic_action_new"
        android:tag="new" />

</FrameLayout>