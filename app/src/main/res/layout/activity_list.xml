<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MicroNote.Activity.ActivityList">
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activityListList"
        style="@style/MicroNote.Activity.ActivityList.List" />
    
    <LinearLayout
        android:id="@+id/activityListMessageListEmpty"
        style="@style/MicroNote.Activity.ActivityList.Message">
        
        <TextView
            android:id="@+id/activityListMessageListEmptyTitle"
            android:text="@string/activity_list_list_empty_title"
            style="@style/MicroNote.Activity.ActivityList.Message.Title" />
        
        <TextView
            android:id="@+id/activityListMessageListEmptyBody"
            android:text="@string/activity_list_list_empty_body"
            style="@style/MicroNote.Activity.ActivityList.Message.Body" />
    
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/activityListNewButton"
        android:onClick="onButtonClick"
        style="@style/MicroNote.Activity.ActivityList.NewButton" />

</RelativeLayout>
