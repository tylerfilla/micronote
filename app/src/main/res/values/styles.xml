<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="MicroNote.Activity.ActivityList" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.List" parent="">
        <item name="android:layout_above">@id/activityListAdSpacer</item>
        <item name="android:layout_below">@id/activityListToolbar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.List.Item" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/activity_list_list_item_padding</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.List.Item.Title" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/activity_list_list_item_title</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.List.Item.ContentPreview" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/activity_list_list_item_content_preview</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.Message" parent="">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_below">@id/activityListToolbar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/activity_list_message_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/activity_list_message_layout_margin_right</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.Message.Title" parent="">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/activity_list_message_title</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.Message.Body" parent="">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/activity_list_message_body</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.NewButton" parent="MicroNote.Widget.FloatingActionButton">
        <item name="android:layout_alignBottom">@id/activityListList</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">@dimen/activity_list_new_button_layout_height</item>
        <item name="android:layout_width">@dimen/activity_list_new_button_layout_width</item>
        <item name="android:layout_marginBottom">@dimen/activity_list_new_button_layout_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/activity_list_new_button_layout_margin_right</item>
        <item name="android:src">@drawable/ic_mode_edit_white_24dp</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.AdSpacer" parent="">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityEdit" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityEdit.FragmentEditor" parent="">
        <item name="android:layout_below">@id/activityEditToolbar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityEdit.FragmentEditor.NoteEditorContainer" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityEdit.FragmentEditor.NoteEditor" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="MicroNote.Activity.ActivitySettings" parent="">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="MicroNote.Activity.ActivitySettings.List" parent="">
        <item name="android:layout_below">@id/activitySettingsToolbar</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="MicroNote.Widget.FloatingActionButton" parent="">
        <item name="android:background">@drawable/background_widget_floating_action_button</item>
    </style>
    
    <style name="MicroNote.Widget.Toolbar" parent="">
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/MicroNote.Theme.Toolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    
    <style name="MicroNote.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="actionModeBackground">@color/theme_primary</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    
    <style name="MicroNote.Theme.Translucent" parent="MicroNote.Theme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="MicroNote.Theme.Toolbar" parent="">
        <item name="android:textColorPrimary">@color/theme_toolbar_control_color_normal</item>
        <item name="android:textColorPrimaryInverse">@color/theme_toolbar_control_color_normal</item>
        <item name="colorControlNormal">@color/theme_toolbar_control_color_normal</item>
    </style>

</resources>
