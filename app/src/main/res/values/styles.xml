<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="MicroNote" />
    
    <style name="MicroNote.ThemeBase" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    </style>
    
    <style name="MicroNote.Theme" parent="MicroNote.ThemeBase">
        <item name="android:windowBackground">@color/theme_window_background</item>
    </style>
    
    <style name="MicroNote.Activity" />
    
    <style name="MicroNote.Activity.ActivityList">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.List">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    
    <style name="MicroNote.Activity.ActivityList.List.Item">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="MicroNote.Activity.ActivitySettings">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="MicroNote.Activity.ActivitySettings.List">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
